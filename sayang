<script>
  let current = 0;
  const slides = document.getElementById('slides');
  let scale = 1;

  function next() {
    current++;
    slides.style.transform = `translateY(-${current * 100}vh)`;
  }

  function no() {
    scale += 0.4;
    document.getElementById('yesBtn').style.transform = `scale(${scale})`;
  }

  function yes() {
    next();
  }
</script>

